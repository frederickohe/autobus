{
    "version": "7.3",
    "screens": [
        {
            "id": "REGISTRATION_FORM",
            "title": "Registration Form",
            "terminal": false,
            "data": {
                "First_Name": {
                    "type": "string",
                    "__example__": "John"
                },
                "Last_Name": {
                    "type": "string",
                    "__example__": "Doe"
                },
                "phone": {
                    "type": "string",
                    "__example__": "+237600000000"
                },
                "Email": {
                    "type": "string",
                    "__example__": "john@example.com"
                },
                "PIN": {
                    "type": "string",
                    "__example__": "12345"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "TextHeading",
                        "text": "Create Your Account"
                    },
                    {
                        "type": "TextBody",
                        "text": "Please fill in your details to register"
                    },
                    {
                        "type": "TextInput",
                        "name": "First_Name",
                        "label": "First Name",
                        "input-type": "text",
                        "required": true,
                        "helper-text": "Enter your first name"
                    },
                    {
                        "type": "TextInput",
                        "name": "Last_Name",
                        "label": "Last Name",
                        "input-type": "text",
                        "required": true,
                        "helper-text": "Enter your last name"
                    },
                    {
                        "type": "TextInput",
                        "name": "phone",
                        "label": "Phone Number",
                        "input-type": "phone",
                        "required": true,
                        "helper-text": "Enter your phone number with country code"
                    },
                    {
                        "type": "TextInput",
                        "name": "Email",
                        "label": "Email Address",
                        "input-type": "email",
                        "required": true,
                        "helper-text": "Enter your email address"
                    },
                    {
                        "type": "TextInput",
                        "name": "PIN",
                        "label": "Create PIN",
                        "input-type": "password",
                        "required": true,
                        "helper-text": "Create a 5-digit PIN for your account",
                        "min-chars": 5,
                        "max-chars": 5
                    },
                    {
                        "type": "Footer",
                        "label": "Submit",
                        "on-click-action": {
                            "name": "navigate",
                            "next": {
                                "type": "screen",
                                "name": "SUCCESS_SCREEN"
                            },
                            "payload": {
                                "First_Name": "${form.First_Name}",
                                "Last_Name": "${form.Last_Name}",
                                "phone": "${form.phone}",
                                "Email": "${form.Email}",
                                "PIN": "${form.PIN}"
                            }
                        }
                    }
                ]
            }
        },
        {
            "id": "SUCCESS_SCREEN",
            "title": "Registration Complete",
            "terminal": true,
            "success": true,
            "data": {
                "First_Name": {
                    "type": "string",
                    "__example__": "John"
                },
                "Last_Name": {
                    "type": "string",
                    "__example__": "Doe"
                },
                "phone": {
                    "type": "string",
                    "__example__": "+237600000000"
                },
                "Email": {
                    "type": "string",
                    "__example__": "john@example.com"
                },
                "PIN": {
                    "type": "string",
                    "__example__": "12345"
                }
            },
            "layout": {
                "type": "SingleColumnLayout",
                "children": [
                    {
                        "type": "TextHeading",
                        "text": "Welcome, ${data.First_Name} ${data.Last_Name}!"
                    },
                    {
                        "type": "TextBody",
                        "text": "Your registration has been completed successfully."
                    },
                    {
                        "type": "TextCaption",
                        "text": "Email: ${data.Email}"
                    },
                    {
                        "type": "TextCaption",
                        "text": "Phone: ${data.phone}"
                    },
                    {
                        "type": "Footer",
                        "label": "Done",
                        "on-click-action": {
                            "name": "complete",
                            "payload": {
                                "First_Name": "${data.First_Name}",
                                "Last_Name": "${data.Last_Name}",
                                "phone": "${data.phone}",
                                "Email": "${data.Email}",
                                "PIN": "${data.PIN}"
                            }
                        }
                    }
                ]
            }
        }
    ]
}
